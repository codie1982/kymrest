RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond $1 !(config|core|css|js|fonts|robots\.txt)

#RewriteRule ^(blog)/(.+)/?$ index.php?rt=$1/view/$2 [L,NC,QSA]
